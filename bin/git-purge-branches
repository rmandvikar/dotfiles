#!/bin/sh

# delete merged branches except certain ones
#usage: git purge-branches [-n | --dry-run]

dryRun=false
while true; do
	case "$1" in
		-n | --dry-run )
			dryRun=true; shift ;;
		-- ) shift; break ;;
		* )
			if [ ! -z "$1" ]; then
				echo 1>&2 "fatal: unknown option $1"
				exit 1
			fi
			break ;;
	esac
done

branches=$(
	git branch --merged \
	| egrep -v "^(\*)" \
	| cut -c3- \
	| egrep -v "^(master|next|pu|maint|todo)$" \
	| egrep -v "^(dev|stg|stage|last)$" \
	| egrep -v "^(bak/|cr/)" \
)
for branch in ${branches[@]}; do
	if [ $dryRun == true ]; then
		echo "Would delete "$branch
	else
		git branch -d $branch
	fi
done
