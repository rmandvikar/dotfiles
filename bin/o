#!/bin/sh

if [ $# -gt 0 ]; then
	if [ "$1" = "-" ]; then
		stdinfile=$(tmpfile)
		exec > "$stdinfile"
		while IFS= read -r line; do
			printf '%s\n' "$line"
		done
		if [ -n "$line" ]; then
			printf '%s\n' "$line"
		fi
		exec $EDITOR "$stdinfile" &
	# scite - reads from stdin into Untitled buffer in foreground
	# scite -@ reads files from stdin in foreground
	#elif [ "$EDITOR" = "scite" ] && [ "$1" = "-" ]; then
	#	exec $EDITOR -
	else
		exec $EDITOR "$@" &
	fi
else
	args=""
	while IFS= read -r line; do
		args=$args$line" "
	done
	if [ -n "$line" ]; then
		args=$args$line" "
	fi
	case "$OSTYPE" in
		linux* | msys*)
			exec echo $args | sed 's,\r,, g' | xargs -r $EDITOR &
			;;
		darwin*)
			exec echo $args | xargs $EDITOR &
			;;
	esac
fi
