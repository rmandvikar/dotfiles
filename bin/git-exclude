#!/bin/sh

#usage: git exclude <file1> [<file2> ... ]
#
# Exclude file by appending to '.git/info/exclude'.

if [[ "$1" == "-h" ]]; then print-file-comments "$0"; exit; fi

if [ -z "$1" ]; then
	echo 1>&2 "fatal: file required"
	exit 1
fi

while true; do
	case "$1" in
		* )
			if [ -z "$1" ]; then
				break
			fi
			echo "$1" >> .git/info/exclude
			shift ;;
	esac
done
