#!/bin/sh

#usage:
#   emoji <name> <size>
#
# Gen a big emoji, for shits and giggles.

while true; do
	case "$1" in
		-h ) print-file-comments "$0"; exit ;;
		-* )
			if [ ! -z "$1" ]; then
				echo 1>&2 "fatal: unknown option $1"
				exit 1
			fi
			exit ;;
		* )
			name="$1"
			size="$2"
			break ;;
	esac
done

if [ -z "$name" ]; then
	echo 1>&2 "fatal: specify name"
	exit 1
fi
if [ -z "$size" ]; then
	echo 1>&2 "fatal: specify size"
	exit 1
fi

x=0
for i in $(seq 1 $size); do
	for j in $(seq 1 $size); do
		x=$((x+1))
		printf "%s" ":$name$x:"
	done
	printf "\n"
done
